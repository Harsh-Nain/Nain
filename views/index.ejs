<style>
    #Schema,
    #data,
    #auth {
        display: none;
    }

    .api {
        position: fixed;
        left: 23%;
        top: 35%;
    }

    .bt3 {
        position: absolute;
        right: 29.7%;
        top: 23%;
    }

    .bt4 {
        position: absolute;
        transition: all 0.7s linear;
        overflow: hidden;
        top: 41%;
    }

    .cut {
        position: absolute;
        right: 2%;
        top: 3%;
    }

    .cut i {
        color: gray;
        transition: all 0.2s linear;
    }

    .cut:hover i {
        color: rgb(0, 255, 17);
    }

    .btmc {
        position: absolute;
        right: 10%;
        margin-top: 7px;
        border: 1px solid gray;
        border-radius: 10px;
        width: 50px;
        height: 30px;
        font-size: 12px;
        cursor: pointer;
    }

    .btmc:active {
        font-size: 0;
        transition: all 0.7s linear;
    }

    #mark {
        position: absolute;
        right: 0;
        top: 0;
        border-radius: 0 4px 0 13px;
    }

    #switchAcc {
        z-index: 12;
        position: fixed;
        left: 32.5%;
        display: none;
        top: 10%;
    }

    #barclick {
        display: none;
        position: fixed;
        bottom: 10%;
    }

    #btn,
    #btn i {
        transition: all 0.2s linear;
    }

    #btn:hover {
        background-color: rgb(55, 55, 55);
    }

    .cover {
        width: 100%;
        height: 100vh;
        position: fixed;
        z-index: 10;
        display: none;
        background-color: #000000b4;
    }

    .bar {
        position: fixed;
        transition: all 0.6s linear;
        background-color: rgb(55, 55, 55);
        bottom: 0.7%;
        left: 1%;
    }

    .bar:hover {
        background-color: green;
    }

    #box4:hover {
        transform: scale(0.9);
        cursor: pointer;
    }

    .ic{
        transition: all 0.7s linear;
    }

    #box4,
    .key,
    .bar img,
    .rotate {
        transition: all 0.7s linear;
    }

    .bt3:hover .key {
        transform: translatey(-3px);
    }

    .bt4:hover .key {
        transform: translatey(-1px);
    }

    .bt4:hover {
        width: 50px;
    }

    .bt4 .key {
        transform: translatey(14px);
    }

    .bar:hover img {
        transform: scale(-1);
    }

    .ok:hover .rotate {
        transform: rotate(180deg);
    }
</style>

