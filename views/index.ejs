    <script>
        const api = document.querySelector('.api')
        const us = document.querySelectorAll('#us')
        const Switch = document.querySelector('#switch')
        const switchAcc = document.querySelector('#switchAcc')
        const bar = document.querySelector('.bar')
        const barclick = document.querySelector('#barclick')
        const mark = document.querySelector('#mark')
        const box4 = document.querySelectorAll('#box4')
        const cut = document.querySelector('.cut')
        const bt3 = document.querySelector('#bt3')
        const auth = document.querySelector('#auth')
        const data = document.querySelector('#data')
        const hid = document.querySelectorAll('#hid')
        const btn = document.querySelectorAll('#btn')
        const month = document.querySelector('.month')
        const cover = document.querySelector('.cover')
        const text = document.querySelectorAll('.text')
        const bgc = document.querySelectorAll('.bgc')
        const bordr = document.querySelectorAll('.bordr')
        const Schema = document.querySelector('#Schema')
        let color = 'green'

        box4.forEach(b => {
            b.addEventListener('click', () => {
                if (b == box4[0]) {
                    color = 'var(--color-yellow-500)'
                }
                if (b == box4[1]) {
                    color = 'var(--color-blue-400)'
                }
                if (b == box4[2]) {
                    color = 'var(--color-red-400)'
                }
                if (b == box4[3]) {
                    color = 'var(--color-green-500)'
                }
                document.querySelector('#btn').style.backgroundColor = color
                let i = 0
                bordr.forEach(bb => {
                    text[i].style.color = color || ''
                    bb.style.borderColor = color
                    if (bgc[i]) {
                        bgc[i].style.backgroundColor = color
                    }
                    i++
                });
            })
        });

        us.forEach(element => {
            element.addEventListener('click', async () => {
                const username = element.childNodes[5].textContent.trim()
                const password = element.childNodes[1].value.trim()

                const response = await fetch("/login", {
                    method: "POST",
                    headers: { "Content-type": "application/json" },
                    body: JSON.stringify({
                        username,
                        password,
                    })
                })
                let data = await response.json()
                if (data.success) {
                    cover.style.display = 'block'
                    window.location.href = data.redirect;
                } else {
                    console.log(data);
                }
            })
        });

        bar.addEventListener('click', () => {
            bar.style.display = 'none'
            cover.style.display = 'block'
            switchAcc.style.display = 'block'
        })

        mark.addEventListener('click', () => {
            bar.style.display = 'flex'
            cover.style.display = 'none'
            switchAcc.style.display = 'none'
        })

        const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        month.innerHTML = `${months[new Date().getMonth()]}`

        function copy() {
            const copyText = document.querySelector('#key')
            navigator.clipboard.writeText(copyText.value);
            mark.click()
            cut.click()
        }
        function copy1() {
            const copyText = document.querySelector('.cod')
            navigator.clipboard.writeText(copyText.textContent);
            mark.click()
        }
        function copy2() {
            const copyText = document.querySelector('.cod2')
            navigator.clipboard.writeText(copyText.textContent);
            mark.click()
        }
        function copy3() {
            const copyText = document.querySelector('.cod2')
            navigator.clipboard.writeText(copyText.textContent);
            mark.click()
        }

        cut.addEventListener('click', () => {
            api.style.display = 'none'
            bt3.style.backgroundColor = 'transparent'
            mark.click()
        })

        bt3.addEventListener('click', () => {
            if (api.style.display == 'none') {
                api.style.display = 'block'
                bt3.style.backgroundColor = color
                mark.click()
            } else {
                api.style.display = 'none'
                bt3.style.backgroundColor = 'transparent'
                mark.click()
            }
        })

        btn.forEach(b => {

            b.addEventListener('mousemove', () => {
                if (b == btn[1]) btn[1].childNodes[0].style.transform = 'rotatey(180deg)'
                if (b == btn[2]) btn[2].childNodes[0].style.transform = 'rotatey(180deg)'
                if (b == btn[3]) btn[3].childNodes[0].style.transform = 'rotatey(180deg)'
            })

            b.addEventListener('mouseleave', () => {
                btn[1].childNodes[0].style.transform = 'rotatey(0deg)'
                btn[2].childNodes[0].style.transform = 'rotatey(0deg)'
                btn[3].childNodes[0].style.transform = 'rotatey(0deg)'
            })

            b.addEventListener('click', () => {
                mark.click()

                Schema.style.display = 'none'
                hid.forEach(h => {
                    h.style.display = 'none';
                });
                data.style.display = 'none'
                auth.style.display = 'none'

                if (b.textContent.trim() == 'Schema API') {
                    Schema.style.display = 'block'
                    b.childNodes[0].classList.add('text-yellow-500')

                } else if (b.textContent == 'Data Save API') {
                    data.style.display = 'block'
                    b.childNodes[0].classList.add('text-blue-400')
                }
                else if (b.textContent == 'Auth Handle API') {
                    b.childNodes[0].classList.add('text-red-500')
                    auth.style.display = 'block'
                }
                else {
                    hid.forEach(h => {
                        h.style.display = 'flex';
                    });
                }
                btn.forEach(b => {
                    b.style.backgroundColor = 'transparent'
                });
                b.style.backgroundColor = color
            })
        });

